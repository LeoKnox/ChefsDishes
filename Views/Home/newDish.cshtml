@model Dish

<h2>Add a Dish!</h2>
<a href = "/dishes">Home</a>
<form asp-action="makeDish" asp-controller="Home" method="post">
    <span asp-validation-for="DishName"></span>
    <label asp-for="DishName"></label>
    <input asp-for="DishName"><br>
    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <input asp-for="Calories"><br>
    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <input asp-for="Description"><br>
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select><br>
    <label asp-for="ChefId"></label>
    <select asp-for="ChefId">
        @{
            foreach (var chef in @ViewBag.cooks) {
                <option value=@chef.ChefId>@chef.FirstName @chef.LastName</option>
            }
        }
    </select><br>
    <input value="Add Dish" type = "submit">
</form>